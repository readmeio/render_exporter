{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "nodenext",
    "resolveJsonModule": false,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/*.ts"]
}
